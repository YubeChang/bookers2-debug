<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <%= render 'books/index',books: @books %>


      <h2>投稿数の前日比・前週比</h2>
        <table class='table table-bordered',border="1">
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
          <tr>
            <td><%= @today.count %></td>
            <td><%= @yesterday.count %></td>
            <% if @yesterday.count == 0 || @today.count == 0 %>
            <td>-%</td>
            <% else %>
            <td><%= @today.count / @yesterday.count * 100 %>%
            </td>
            <% end %>
          </tr>
        </table>
        <table class='table table-bordered',border="1">
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
          <tr>
            <td><%= @week.count %></td>
            <td><%= @prev_week.count %></td>
            <% if @prev_week.count == 0 || @week.count == 0 %>
            <td>-%</td>
            <% else %>
            <td><%= @week.count / @prev_week.count * 100 %>%
            </td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>
