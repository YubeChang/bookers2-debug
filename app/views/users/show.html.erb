<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <%= render 'books/index',books: @books %>

<!--非同期検索機能-->
      <div class="container">
        <%= form_with url: searches_post_day_path, method: :get, local: false do |f| %>
          <div class="text-center">
            <%= f.date_field :post_day %>
            <%= f.hidden_field :user_id, :value => @user.id %>
            <%= f.submit '検索' %>
          </div>
        <% end %>
        <div id="day_search"><!--js用render書き換え元スペース--></div>
      </div>
    </div>
  </div>
</div>
