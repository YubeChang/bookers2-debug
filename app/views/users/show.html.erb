<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
        <%= render 'books/index',books: @books %>


      <h2>投稿数の前日比・前週比</h2>
        <table class='table table-bordered',border="1">
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
          <tr>
            <td><%= @day6.count %></td>
            <td><%= @day5.count %></td>
            <td><%= @day4.count %></td>
            <td><%= @day3.count %></td>
            <td><%= @day2.count %></td>
            <td><%= @day1.count %></td>
            <td><%= @today.count %></td>
          </tr>
        </table>
    </div>
  </div>
</div>
