    <!--コメント一覧-->
      <div id="comments_func">
        <% book.book_comments.each do |book_comment| %>
          <div>
            <%= image_tag book_comment.user.get_profile_image(50,50) %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to 'Destroy', book_book_comment_path(book_comment.book.id,book_comment.id), class: "btn btn-danger", method: :delete, remote: true %>
            <% end %>
            <br><%= link_to book_comment.user.name, user_path(book_comment.user_id) %>
          </div>
        <% end %>
      <div>
    <!--コメントフォーム-->
        <%= form_with model: [book, comment], local: false do |f| %>
          <%= f.text_area :comment, rows: '5', class: 'form-control book_comment' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
      </div>